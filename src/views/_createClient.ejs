<div class="content">
  <div class="container-fluid">
    <div class="row">
      <div class="col-md-12">
        <div class="card">
          <div class="card-header card-header-primary">
            <h4 class="card-title ">Create User</h4>
            <p class="card-category">
              Adicione as informações do usuario a baixo
            </p>
          </div>
          <div class="card-body">
            <form>
              <div class="form-row">
                <div class="form-group col-md-6">
                  <label for="Title">Nome do Cliente</label>
                  <input
                    autofocus
                    class="form-control"
                    name="Title"
                    value="<%= model.Title %>"
                  />
                </div>
                <div class="form-group col-md-6">
                  <label for="Author">Tipo de Serviço</label>
                  <input
                    class="form-control"
                    name="Author"
                    value="<%= model.Author %>"
                  />
                </div>
              </div>
              <div class="form-group">
                <label for="Comments">Valor do Serviço</label>
                <input
                  type="text"
                  class="form-control"
                  placeholder="Valor do Serviço"
                  name="Comments"
                  value="<%= model.PriceService %>"
                />
              </div>

              <div>
                <input
                  type="submit"
                  value="Save"
                  class="btn btn-default btn-success"
                />
                <a class="btn btn-outline-dark cancel" href="/clients"
                  >Cancel</a
                >
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
